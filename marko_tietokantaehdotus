Viesti
	(pk) id
	(fk) Lähettäjä:lähettäjä
	lähetysaika
	viesti

Lähettäjä
	(pk) nimimerkki
	status
	salasana

Alue
	(pk) tunnus
	kuvaus
	nimi
	viestiketjujen yhteismäärä
	(fk) kategoria

Viestiketju
	(pk) id
	otsikko
	(fk) alue:Alue
	boolean suljettu
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

Oma versioni

	Viesti
		(pk) v_id			integer primary key autoincrement unique
		(fk) vk_id			integer foreign key	
		nimimerkki			varchar
		viesti				varchar
		lähetysaika			DATE
	Viestiketju				
		(pk) vk_id			integer primary key autoincrement unique
		(fk) a_id			integer foreign key
		otsikko				varchar
		luoja				varchar
		aloitusviesti			varchar
		luomisaika			DATE
	Alue 					
		(pk) a_id			integer primary key autoincrement unique
		nimi				varchar
		luoja				varchar
		luomisaika			DATE
		otsikko				varchar




Komennot:
	Viesti taulun tekeminen
		CREATE TABLE Viesti(v_id INTEGER PRIMARY KEY AUTOINCREMENT, vk_id INTEGER, nimimerkki VARCHAR, viesti VARCHAR, lahetysaika DATE, FOREIGN KEY(vk_id) REFERENCES Viestiketju(vk_id));

	Viestin lisääminen Viesti-tauluun
		INSERT INTO Viesti (vk_id,nimimerkki,viesti,lahetysaika) VALUES (1,"Pete","Oispa kaljaa!",DateTime('now'));

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	Viestiketju taulun tekeminen
		CREATE TABLE Viestiketju (vk_id INTEGER PRIMARY KEY AUTOINCREMENT, a_id INTEGER, otsikko VARCHAR, luoja VARCHAR, aloitusviesti VARCHAR, luomisaika DATE, FOREIGN KEY(a_id) REFERENCES Alue(a_id));
	
	Uuden viestiketjun tekeminen
		INSERT INTO Viestiketju (a_id,otsikko,luoja,aloitusviesti,luomisaika) VALUES (1,"Onko java jees?","Reiska","Itse en mitään javaa koodaile!!", Datetime('now'));
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
	Alue taulun tekeminen
		CREATE TABLE Alue (a_id INTEGER PRIMARY KEY AUTOINCREMENT, otsikko VARCHAR, luoja VARCHAR, kuvaus VARCHAR, luomisaika DATE);

	Uuden alueen tekeminen
		INSERT INTO Alue (otsikko,luoja,kuvaus,luomisaika) VALUES ("Ohjelmointi","Pete","Täällä voi keskustella vapaasti ohjelmista ja ohjelmoinnista.",Datetime('now'));
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Testikoodi:

DROP TABLE Viesti;
DROP TABLE Viestiketju;
DROP TABLE Alue;

CREATE TABLE Viesti(v_id INTEGER PRIMARY KEY AUTOINCREMENT, vk_id INTEGER, nimimerkki VARCHAR, viesti VARCHAR, lahetysaika DATE, FOREIGN KEY(vk_id) REFERENCES Viestiketju(vk_id));
CREATE TABLE Viestiketju (vk_id INTEGER PRIMARY KEY AUTOINCREMENT, a_id INTEGER, otsikko VARCHAR, luoja VARCHAR, aloitusviesti VARCHAR, luomisaika DATE, FOREIGN KEY(a_id) REFERENCES Alue(a_id));
CREATE TABLE Alue (a_id INTEGER PRIMARY KEY AUTOINCREMENT, otsikko VARCHAR, luoja VARCHAR, kuvaus VARCHAR, luomisaika DATE);


INSERT INTO Alue (otsikko,luoja,kuvaus,luomisaika) VALUES ("Ohjelmointi","Pete","Täällä voi keskustella vapaasti ohjelmista ja ohjelmoinnista.",Datetime('now'));
